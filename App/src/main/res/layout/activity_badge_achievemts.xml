<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.umorning.activities.BadgeAchievementsActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:background="@drawable/sunny"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/partlyCloudy"
                android:background="@drawable/partly_sunny"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cloudy"
                android:background="@drawable/cloudy"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rainy"
                android:background="@drawable/rainy"
                android:longClickable="true"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stormy"
                android:background="@drawable/stormy"
                android:minWidth="110dp"
                android:minHeight="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/windy"
                android:background="@drawable/windy"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/snowy"
                android:background="@drawable/snowy"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/snowflurries"
                android:background="@drawable/snowflurries"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hailing"
                android:background="@drawable/hailing"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foggy"
                android:background="@drawable/foggy"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heavyseas"
                android:background="@drawable/heavyseas"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calmseas"
                android:background="@drawable/calmseas"
                android:minHeight="110dp"
                android:minWidth="110dp"
                android:onClick="postMetag" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
